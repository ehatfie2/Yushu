<p>
  <strong>Current Adventure:</strong>
  <%= @adventure.name %>
</p>

<%= form_with(model: [ @adventure, @adventure.levels.build ], local: true) do |f| %>

  <% if Level.all.nil? then %>
    <p> Your first level </p>
    <p>
      <%= f.label :level %><br>
      <%= f.text_field :level %>
    </p>
  
    <p>Your move: </p>
    <p>
    
      <% Level::USER_CHOICES.each do |val, choice| %>

        <%= f.label :user_choice, choice %>
        <%= f.radio_button :user_choice, choice, :checked => "checked" %> <br>
      
      <% end %>
    </p>
    <p>
      <%= f.submit %>
    </p>
    
  <%  else  %>
   
    
    <p>
      <%= f.label :level %><br>
      <%= f.text_field :level %>
    </p>
  
    <p>Your move: </p>
    <p>
    
      <% Level::USER_CHOICES.each do |val, choice| %>

        <%= f.label :user_choice, choice %>
        <%= f.radio_button :user_choice, choice, :checked => "checked" %> <br>
      
      <% end %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
<% end %>

<%= link_to 'Back to my Adventures', adventures_path %>